{
  "private": true,
  "scripts": {
    "build": "ng-packagr -p src/ng-package.json",
    "lint": "tslint --project tsconfig.json",
    "test": "jest --watch"
  },
  "jest": {
    "collectCoverage": false,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$"
  },
  "dependencies": {
    "rxjs": "6.0.0"
  },
  "devDependencies": {
    "@angular/compiler": "^6.1.1",
    "@angular/compiler-cli": "^6.1.1",
    "@types/chai": "^4.1.4",
    "@types/jest": "^23.3.1",
    "@types/node": "^8.10.23",
    "chai": "^4.1.2",
    "jest": "^23.4.2",
    "jest-cli": "^23.4.2",
    "ng-packagr": "4.0.1",
    "ts-jest": "^23.1.2",
    "tsickle": "^0.32.1",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.2",
    "zone.js": "^0.8.26"
  }
}
